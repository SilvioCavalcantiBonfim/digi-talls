<div class="py-4">
        <div data-controller="faq">
          <button data-action="click->faq#toggle" class="w-full text-left flex justify-between items-center">
            <span class="font-semibold"><%= faq.question %></span>
            <span
              data-faq-target="icon"
              class="material-symbols-outlined"
            >
              expand_more
            </span>
          </button>
          <div
            data-faq-target="content"
            class="hidden mt-2"
          >
            <p class="text-gray-600">
              <%= faq.answer %>
            </p>
          </div>
        </div>
      </div>